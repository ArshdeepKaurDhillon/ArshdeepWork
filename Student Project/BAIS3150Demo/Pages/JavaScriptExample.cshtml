@page
@model JavaScriptExampleModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>JavaScriptExample</title>
        <script type="text/javascript">

            /* block comment - C convention */

            function IsNumeric(aValue)
            {
                var length = aValue.length;
                var index = 0;
                var isValid = length > 0;

                for (index = 0; (index < length) && isValid; index++)
                {
                    var aCharacter = aValue.charAt(index);
                    if (aCharacter < '0' || aCharacter > '9')       //OR character 
                    {
                        isValid = false;
                    }
                }
                return isValid;                                 //end of line comment- C convention
            }

            function AddOneToField(aField)
            {
                if (IsNumeric(aField.value))
                {
                    aField.value = parseInt(aField.value) + 1
                }
                else
                {
                    alert('Field Value Must be Numeric.');
                    aField.focus();
                    aField.select();
                }
            }

        </script>
    </head>

    <body>
        <form name="SampleForm">
           <p>
               Click This
               <!-- window.document.forms['SampleForm'].elements['IncrementField'] -->
               <input type="button" value="button" onclick="AddOneToField(window.document.SampleForm.IncrementField);" />
               to increment this
               <input type="text" name="IncrementField" size="3" value="0" />
           </p> 
        </form>
    </body>
</html>