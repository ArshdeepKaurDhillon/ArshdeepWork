@page
@model ValidationClientServerModel
@{
}
<DOCTYPE html>
    <html>
        <head>
            <meta charset="utf-8" />
             <title>
              ValidationClientServer
             </title>
            <script type="text/javascript">


                function IsFormValid(aForm)
                {
                    var isValid = false;

                    //Validate InputField
                    var aValue = aForm.InputField.value;
                    var length = aValue.length;

                    if (length > 0 && length <= 5)
                    {
                        isValid = true;
                    }
                    else
                    {
                        alert('InputField is required and can contain upto 5 characters.')
                    }

                    return isValid;
                }
            </script>
        </head>
        <body>
            <form name="SampleForm" method="post" onsubmit="return true";> //add true and comment function to get rid of client side validation: IsFormValid(window.document.SampleForm);">
                <table>
                    <tr>
                        <td>Input Field:</td>
                        <td>
                            <input type="text" name="InputField" />
                            @Html.ValidationMessage("InputField")
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <input type="submit" name="Submit" value="Submit" />
                        </td>
                    </tr>

                </table>
                @Model.Message
                @Html.ValidationSummary()
            </form>
        </body>
    </html>
</DOCTYPE>