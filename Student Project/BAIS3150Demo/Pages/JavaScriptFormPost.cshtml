@page
@model JavaScriptFormPostModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>JavaScript Form Post</title>
        <script type="text/javascript">
            function ValidateViaButton(aForm)
            {
                alert('Button');
                //if valid, call submit()
                aForm.submit();
            }

            function ValidateViaOnSubmit()
            {
                alert('onSubmit');
                //if valid, return true, otherwise return false
                return true;
            }
        </script>
    </head>

    <body>
        <form name="SampleForm" method="post" onsubmit="return ValidateViaOnSubmit();" action="~/TestPost">
            <table>
                <tr>
                    <td>Input Field:</td>
                    <td>
                        <input type="text" name="InputField" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="Submit" value="Submit" />
                    </td>
                    <td>
                        <input type="button" name="Button" value="Button" onclick="ValidateViaButton(window.document.SampleForm);" />
                    </td>
                </tr>
            </table>
        </form>
    </body>
</html>